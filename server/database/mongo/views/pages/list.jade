extends ../layout
block content
  .container
    .row
      table.table.table-hover.table-bordered
        thead
          tr
            th 电影名字
            th 导演
            th 国家
            th 上映时间
            td 录入时间
            td 查看
            td 更新
            td 删除

        tbody
          each item in movies
            tr(class="item-id-#{item._id}")
            td #{item.title}
            td #{item.doctor}
            td #{item.country}
            td #{item.year}
            td #{moment(item.meta.createAt).format('YYYY/DD/MM')}
            td: a(target="_blank", href="../movie/#{item._id}") 查看
            td: a(target="_blank", href="../admin/update/#{item._id}") 修改
            td
              button.btn.btn-danger.del(type="button", data-id="#{item._id}") 删除



